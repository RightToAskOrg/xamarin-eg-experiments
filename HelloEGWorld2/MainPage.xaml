<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloEGWorld2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="EG Hello world!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="This app does very basic things to help us learn ElectionGuard." FontSize="16" Padding="30,0,30,0"/>
        <Button Text="Click here to generate a yes vote" Clicked="Yes_Ballot_Button_Clicked" />
        <Button Text="Click here to generate a no vote" Clicked="No_Ballot_Button_Clicked" />
        <Button Text="Click here to generate an encrypted vote" Clicked="Encrypt_Button_Clicked" />
    </StackLayout>

</ContentPage>
